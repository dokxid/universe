{
    "version": "2.0.0",
    "tasks": [
        {
            "type": "npm",
            "script": "lint",
            "problemMatcher": ["$eslint-stylish", "$tsc"],
            "label": "npm: lint",
            "detail": "tsc --noEmit && eslint .",
            "presentation": {
                "echo": true,
                "reveal": "never",
                "focus": false,
                "panel": "shared",
                "showReuseMessage": true,
                "clear": false,
                "close": true,
                "revealProblems": "onProblem"
            }
        }
    ]
}
